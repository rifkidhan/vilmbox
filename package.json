{
	"name": "vilmbox",
	"version": "1.0.1",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"check": "biome check && prettier --cache --check \"**/*.{tsx,css}\"",
		"check:safe": "biome check --write",
		"format": "biome format --write && prettier --cache --write \"**/*.{tsx,css}\""
	},
	"dependencies": {
		"@next/third-parties": "^15.5.4",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-slot": "^1.2.3",
		"clsx": "^2.1.1",
		"embla-carousel-react": "^8.6.0",
		"next": "15.5.4",
		"next-themes": "^0.4.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@tailwindcss/postcss": "^4.1.13",
		"@types/node": "^20.19.17",
		"@types/react": "^19.1.15",
		"@types/react-dom": "^19.1.9",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2"
	},
	"trustedDependencies": [
		"@tailwindcss/oxide"
	],
	"prettier": {
		"printWidth": 100,
		"useTabs": true,
		"tabWidth": 2,
		"plugins": [
			"prettier-plugin-tailwindcss"
		],
		"tailwindStylesheet": "./src/app/globals.css",
		"tailwindFunctions": [
			"cn"
		]
	}
}
